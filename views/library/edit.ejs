<% include ../partials/header %>
<h1>Update <%= book.title %></h1>
  <form action="/books/<%= book.id %>?_method=put" method="post" class="pure-form">
    <div class="pure-g formItem">
      <label for="title" class="pure-u-1-2">Title</label>
      <input name="book[title]" id="title" value="<%= book.title %>" placeholder="Book title" class="pure-u-1-2" autofocus>
    </div>
    <div class="pure-g formItem">
      <label for="author" class="pure-u-1-2">Author</label>
      <input name="book[author]" id="author" value="<%= book.author %>" placeholder="Book author" class="pure-u-1-2">
    </div>
    <div class="pure-g formItem">
      <label for="coverColor" class="pure-u-1-2">Choose a color for the book's cover:</label>
      <div class="pure-u-1-2">
        <div class="pure-u-1">

          <input type="radio" name="book[color]" id="coverColor" value="red" <% if (book.color === "red") { %> checked <% } %>> <label for="coverColor">Red</label>
        </div>
        <div class="pure-u-1">
          <input type="radio" name="book[color]" id="coverColorBlue" value="blue" <% if (book.color === "blue") { %> checked <% } %>> <label for="coverColorBlue">Blue</label>
        </div>
        <div class="pure-u-1">
          <input type="radio" name="book[color]" id="coverColorGreen" value="green" <% if (book.color === "green") { %> checked <% } %>> <label for="coverColorGreen">Green</label>
        </div>
        <div class="pure-u-1">
          <input type="radio" name="book[color]" id="coverColorTeal" value="teal" <% if (book.color === "teal") { %> checked <% } %>> <label for="coverColorTeal">Teal</label>
        </div>
        <div class="pure-u-1">
          <input type="radio" name="book[color]" id="coverColorPurple" value="purple" <% if (book.color === "purple") { %> checked <% } %>> <label for="coverColorPurple">Purple</label>
        </div>



      </div>
    </div>
    <div class="pure-g">
      <div class="pure-u-1-2 action">
        <a href="/books" class=" actionButton cancel">cancel</a>
      </div>
      <div class="pure-u-1-2 action">
        <input type="submit" value="Save" class="actionButton">
      </div>
    </div>
  </form>
<% include ../partials/footer %>
